{
    "name": "kevinpirnie/kpt-logger",
    "description": "Simple Universal Application Logger for PHP with configurable output destinations and four standard log levels",
    "type": "library",
    "keywords": [
        "logger",
        "logging",
        "debug",
        "error",
        "warning",
        "info",
        "stack-trace",
        "file-logging",
        "system-log"
    ],
    "homepage": "https://github.com/kpirnie/kpt-logger",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Pirnie",
            "email": "me@kpirnie.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "KPT\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KPT\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit tests --coverage-html coverage --coverage-filter src",
        "phpstan": "phpstan analyse src",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/kpirnie/kpt-logger/issues",
        "source": "https://github.com/kpirnie/kpt-logger"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/kpirnie"
        }
    ]
}